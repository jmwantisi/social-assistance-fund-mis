@inherits LayoutComponentBase

<div class="page d-flex flex-column min-vh-100">
    <!-- Main Layout Body -->
    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <div class="sidebar border-end bg-light">
            <NavMenu />
        </div>

        <!-- Main Content -->
        <main class="flex-grow-1 text-dark">
            <div class="top-row px-4 pt-3">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>

            <article class="content px-4 pb-4">
                @Body
            </article>
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top bg-white text-muted py-2 px-4 mt-auto">
        <div class="d-flex justify-content-between align-items-center">
            <img src="images/left-logo.png" alt="Left Logo" height="30">
            <span>&copy; 2025 - Social Assistance Fund</span>
        </div>
    </footer>
</div>

<!-- Error UI -->
<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

<style>
    /* Navbar background */
    .navbar-light {
        background-color: rgba(120, 170, 200, 0.5) !important;
    }

    /* Sidebar width */
    .sidebar {
        width: 250px;
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    /* NavLink hover and active */
    .nav-link {
        color: #495057 !important;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .nav-link:hover {
            background-color: #e2e6ea !important;
            color: #007bff !important;
        }

        .nav-link.active {
            background-color: #007bff !important;
            color: white !important;
        }

    /* Footer styling */
    footer {
        background-color: #f1f1f1;
    }

    .page {
        display: flex;
        flex-direction: column;
    }

    .content {
        min-height: calc(100vh - 100px);
    }
</style>
