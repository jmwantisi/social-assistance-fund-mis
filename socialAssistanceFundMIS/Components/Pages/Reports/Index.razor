@page "/reports"
@using socialAssistanceFundMIS.ViewModels
@using socialAssistanceFundMIS.Models
@using Microsoft.AspNetCore.Components.Web
@rendermode InteractiveServer
@inherits socialAssistanceFundMIS.Pages.Reports.Index

<PageTitle>Reports Dashboard</PageTitle>

<h3 class="mb-4 fw-bold">📊 Reports Dashboard</h3>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-info text-white fw-semibold">Applications by Status</div>
            <div class="card-body">
                <PieChart @ref="statusPieChart" />
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-success text-white fw-semibold">Approved Applicants by Gender</div>
            <div class="card-body">
                <PieChart @ref="genderPieChart" />
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-warning text-dark fw-semibold">Applications per Program</div>
            <div class="card-body">
                <BarChart @ref="programBarChart" height="350" />
            </div>
        </div>
    </div>
</div>