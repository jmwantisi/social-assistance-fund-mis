@page "/error"

<div class="error-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 text-center">
                <div class="error-content">
                    <div class="error-icon">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                    
                    <h1 class="error-title">Oops! Something went wrong</h1>
                    
                    <p class="error-message">
                        We're sorry, but an unexpected error has occurred. Our team has been notified and is working to fix the issue.
                    </p>
                    
                    <div class="error-actions">
                        <button class="btn btn-primary me-3" @onclick="GoBack">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </button>
                        <a href="/" class="btn btn-outline-primary">
                            <i class="bi bi-house me-2"></i>Go Home
                        </a>
                    </div>
                    
                    @if (ShowDetails)
                    {
                        <div class="error-details mt-4">
                            <button class="btn btn-link text-muted" @onclick="ToggleDetails">
                                <i class="bi bi-chevron-up me-1"></i>Hide Details
                            </button>
                            
                            <div class="card mt-3">
                                <div class="card-body">
                                    <h6 class="card-title">Error Details</h6>
                                    <div class="error-info">
                                        <div class="error-info-item">
                                            <strong>Error ID:</strong> 
                                            <span class="text-muted">@ErrorId</span>
                                        </div>
                                        <div class="error-info-item">
                                            <strong>Timestamp:</strong> 
                                            <span class="text-muted">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(ErrorMessage))
                                        {
                                            <div class="error-info-item">
                                                <strong>Message:</strong> 
                                                <span class="text-danger">@ErrorMessage</span>
                                            </div>
                                        }
                                    </div>
                                    
                                    <div class="mt-3">
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="CopyErrorDetails">
                                            <i class="bi bi-clipboard me-1"></i>Copy Details
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mt-4">
                            <button class="btn btn-link text-muted" @onclick="ToggleDetails">
                                <i class="bi bi-chevron-down me-1"></i>Show Details
                            </button>
                        </div>
                    }
                    
                    <div class="error-help mt-5">
                        <h6>Need Help?</h6>
                        <p class="text-muted">
                            If this problem persists, please contact our support team:
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="mailto:support@safmis.gov" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-envelope me-1"></i>Email Support
                            </a>
                            <a href="tel:+1234567890" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-telephone me-1"></i>Call Support
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool ShowDetails { get; set; } = false;
    private string ErrorId { get; set; } = Guid.NewGuid().ToString("N")[..8].ToUpper();
    private string ErrorMessage { get; set; } = "An unexpected error occurred while processing your request.";
    
    private void GoBack()
    {
        NavigationManager.NavigateTo(-1);
    }
    
    private void ToggleDetails()
    {
        ShowDetails = !ShowDetails;
    }
    
    private async Task CopyErrorDetails()
    {
        var errorDetails = $"Error ID: {ErrorId}\nTimestamp: {DateTime.Now:yyyy-MM-dd HH:mm:ss}\nMessage: {ErrorMessage}";
        
        try
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", errorDetails);
            // Show success message
        }
        catch
        {
            // Fallback for older browsers
            await JSRuntime.InvokeVoidAsync("alert", "Error details copied to clipboard");
        }
    }
    
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
}
